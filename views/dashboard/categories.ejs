  <div class="main container-fluid my-4">


    <div class="row justify-content-center">
      <div class="col-md-6">


        <table class="table">
          <thead>
            <tr>
              <th>名稱</th>
              <th>路徑</th>
              <th width="30"></th>
            </tr>
          </thead>
          <tbody>

            <tr>
              <td class="align-middle">心得</td>
              <td><input type="text" class="form-control form-control-sm" value="mind"></td>
              <td class="align-middle">
